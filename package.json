{
  "version": "1.2.0",
  "name": "i18next-locales-sync",
  "description": "Syncs i18next locale resource files against a primary language.\n",
  "keywords": [
    "i18next",
    "locale",
    "sync"
  ],
  "author": "felixmosh",
  "license": "MIT",
  "homepage": "https://github.com/felixmosh/i18next-locales-sync",
  "bugs": "https://github.com/felixmosh/i18next-locales-sync/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/felixmosh/i18next-locales-sync"
  },
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch --target=node",
    "build": "rm -rf dist && tsc",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "release": "release-it --only-version",
    "prepare": "npm run build"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "auto-changelog": "^2.4.0",
    "husky": "^4.3.0",
    "memfs": "^3.4.1",
    "release-it": "^14.14.2",
    "tsdx": "^0.14.1",
    "typescript": "^4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false -u --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs"
    },
    "hooks": {
      "before:init": [
        "yarn test",
        "yarn lint",
        "yarn build"
      ],
      "after:bump": "npx auto-changelog -p"
    },
    "github": {
      "release": true
    }
  }
}
